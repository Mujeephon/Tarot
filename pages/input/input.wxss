/**input.wxss**/
.container {
  padding: 30rpx;
  background-color: #f8f6f9;
  min-height: 100vh;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #6a3093;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #888;
}

.form-group {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
  padding: 15rpx;
  background-color: #faf8fc;
  border-radius: 15rpx;
}

.label {
  display: block;
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.picker {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #e0e0e0;
  font-size: 34rpx;
  color: #333;
  padding: 0 20rpx;
}

.placeholder {
  color: #999;
}

.input {
  height: 100rpx;
  border-bottom: 2rpx solid #e0e0e0;
  font-size: 34rpx;
  padding: 0 20rpx;
}

.textarea {
  width: 100%;
  height: 240rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 15rpx;
  padding: 25rpx;
  font-size: 34rpx;
  box-sizing: border-box;
}

.submit-btn {
  background: linear-gradient(135deg, #6a3093 0%, #a044ff 100%);
  color: white;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
  width: 80%;
  margin: 0 auto;
  box-shadow: 0 8rpx 20rpx rgba(106, 48, 147, 0.3);
}